{
  "name": "electronite-poc-app",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000/ && cross-env NODE_ENV=development npm run electronite-start\"",
    "remove-build-folders": "rm -rf dist && rm -rf build",
    "prebuild": "npm run remove-build-folders && npm run react-build && npm run build-main",
    "build": "npm run electronite-build",
    "build-win": "npm run prebuild && npm run electronite-build-win",
    "electronite-start": "electronite .",
    "electronite-build": "electronite-packager ./build --out=dist --icon=src/images/icon.icns",
    "electronite-build-win": "electronite-packager ./build --out=dist --arch=all --icon=src/images/icon.ico",
    "react-start": "craco start",
    "react-build": "craco build",
    "build-main": "webpack --config electronite/webpack.config.js",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "eslint ./src && craco test --logHeapUsage --watchAll=false",
    "ci-test": "eslint ./src && craco test --max-old-space-size=8192 --maxWorkers=4 --logHeapUsage --coverage"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@craco/craco": "5.6.4",
    "@neutrinog/electron-dl": "^1.11.1",
    "agentkeepalive": "^4.1.0",
    "fs-extra": "^4.0.3",
    "moment": "^2.24.0",
    "path-extra": "^3.0.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-localize-redux": "^3.5.3",
    "react-redux": "^5.1.1",
    "react-scripts": "3.4.1",
    "redux": "^3.7.2",
    "redux-batched-actions": "^0.4.1",
    "redux-logger": "^3.0.6",
    "redux-promise": "^0.6.0",
    "redux-thunk": "^2.2.0",
    "tc-electron-env": "^0.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@storybook/react": "^5.3.9",
    "@types/jest": "^24.9.1",
    "@types/node": "^13.5.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "babel-loader": "^8.0.6",
    "codecov": "^3.0.2",
    "concurrently": "^5.0.2",
    "copy-webpack-plugin": "^5.1.1",
    "cross-env": "^7.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electronite": "^6.0.7",
    "electronite-packager": "^15.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "gulp": "^4.0.0",
    "gulp-change": "^1.0.0",
    "prettier": "^2.0.4",
    "source-map-explorer": "^2.2.2",
    "typescript": "^3.7.5",
    "wait-on": "^4.0.0",
    "webpack-cli": "^3.3.11"
  }
}
